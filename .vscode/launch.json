{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run CMS",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceFolder}/cms"
    },
    {
      "name": "Run Client",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "start"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceFolder}/client"
    },
    {
      "name": "Run API",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "dev"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node",
      "cwd": "${workspaceFolder}/api"
    }
  ],
  "compounds": [
    {
      "name": "Run All",
      "configurations": ["Run Client", "Run CMS", "Run API"]
    }
  ]
}