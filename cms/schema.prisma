datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  createdAt DateTime? @default(now())
  isAdmin   Boolean   @default(false)
}

model Announcement {
  id     String  @id @default(cuid())
  text   String  @default("")
  colour String  @default("blue")
  active Boolean @default(true)
}

model About {
  id      Int    @id
  content String @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
}

model Product {
  id                     String  @id @default(cuid())
  title                  String  @default("")
  previewImage_filesize  Int?
  previewImage_extension String?
  previewImage_width     Int?
  previewImage_height    Int?
  previewImage_id        String?
  description            String  @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  image_filesize         Int?
  image_extension        String?
  image_width            Int?
  image_height           Int?
  image_id               String?
}
